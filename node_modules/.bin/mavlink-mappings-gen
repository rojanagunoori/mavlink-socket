#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -x "$basedir/npx" ]; then
  exec "$basedir/npx" ts-node "$basedir/../mavlink-mappings-gen/dist/cli.js" "$@"
else 
  exec npx ts-node "$basedir/../mavlink-mappings-gen/dist/cli.js" "$@"
fi
